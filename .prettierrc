{
  "debug": false,
  "prettier_cli_path": "",
  "node_path": "",
  "auto_format_on_save": true,
  "auto_format_on_save_excludes": ["*.liquid"],
  "auto_format_on_save_requires_prettier_config": false,
  "allow_inline_formatting": false,
  "custom_file_extensions": [],
  "max_file_size_limit": -1,
  "disable_tab_width_auto_detection": false,
  "additional_cli_args": {},
  "prettier_options": {
    "printWidth": 280,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "babel",
    "semi": true,
    "requirePragma": false,
    "proseWrap": "preserve",
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "css"
  }
}
